  match "**/*.scss" do
    sass
  end

  match "**/*.handlebars" do
    copy
  end

  match "**/*.js" do
    copy
  end

  # match "**/*.css" do
  #   copy
  # end

  match "index.html" do
    copy
  end

  match "**/*.css" do
    concat "application.css"
  end

end
